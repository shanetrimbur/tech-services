<style>
  .pill-button {
    @apply rounded-full bg-blue-600 text-white px-6 py-2 hover:bg-blue-700 transition-colors;
  }

  .glow-t {
    opacity: 0;
    text-shadow: 0 0 10px rgba(59, 130, 246, 0.5),
                 0 0 20px rgba(59, 130, 246, 0.3),
                 0 0 30px rgba(59, 130, 246, 0.2);
    animation: glow-in 2s ease-in forwards;
  }

  .subtle-glow {
    opacity: 0;
    animation: subtle-glow-in 2s ease-in forwards 1s;
  }

  @keyframes glow-in {
    0% {
      opacity: 0;
      text-shadow: none;
    }
    50% {
      opacity: 1;
      text-shadow: 0 0 20px rgba(59, 130, 246, 0.8),
                   0 0 40px rgba(59, 130, 246, 0.6),
                   0 0 60px rgba(59, 130, 246, 0.4);
    }
    100% {
      opacity: 1;
      text-shadow: 0 0 10px rgba(59, 130, 246, 0.5),
                   0 0 20px rgba(59, 130, 246, 0.3),
                   0 0 30px rgba(59, 130, 246, 0.2);
    }
  }

  @keyframes subtle-glow-in {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .globe-container {
    height: 200px;
    display: flex;
    justify-content: center;
    align-items: center;
    perspective: 1000px;
  }

  .globe {
    position: relative;
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: radial-gradient(circle at 30% 30%, #1e40af, #1e3a8a);
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
    transform-style: preserve-3d;
    animation: rotate 20s linear infinite;
  }

  .globe-grid {
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: 
      linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px) 0 0 / 10px 10px,
      linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px) 0 0 / 10px 10px;
  }

  .satellites {
    position: absolute;
    width: 200%;
    height: 200%;
    left: -50%;
    top: -50%;
    animation: rotate-opposite 30s linear infinite;
  }

  .satellite {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 2px;
    transform-origin: left center;
    transform: rotate(var(--orbit-angle)) translateX(60px);
  }

  .satellite-dot {
    position: absolute;
    right: -2px;
    top: -2px;
    width: 4px;
    height: 4px;
    background: #60a5fa;
    border-radius: 50%;
    box-shadow: 0 0 10px #60a5fa;
  }

  @keyframes rotate {
    from {
      transform: rotateY(0deg) rotateX(23deg);
    }

    to {
      transform: rotateY(360deg) rotateX(23deg);
    }
  }

  @keyframes rotate-opposite {
    from {
      transform: rotateZ(360deg);
    }
    to {
      transform: rotateZ(0deg);
    }
  }

  /* Add connection lines between satellites */
  .satellite::after {
    content: '';
    position: absolute;
    width: 120px;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(96, 165, 250, 0.3));
    transform-origin: left center;
    transform: rotate(45deg);
  }

  .network-container {
    height: 400px;
    position: relative;
    overflow: visible;
    margin: -40px 0 -20px 0;
  }

  .network {
    width: 100%;
    filter: url(#glow);
  }

  .node {
    fill: rgba(147, 197, 253, var(--opacity));
    opacity: 0;
    animation: emerge 3s ease-out forwards,
               fade-to-dim 2s ease-out forwards 3s;
    animation-delay: var(--delay);
  }

  .connection {
    stroke: rgba(147, 197, 253, var(--opacity));
    stroke-width: 0.5;
    stroke-dasharray: 300;
    stroke-dashoffset: 300;
    opacity: 0;
    animation: draw-line 2s ease-out forwards,
               fade-to-dim 2s ease-out forwards 3s;
    animation-delay: var(--delay);
  }

  @keyframes emerge {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  @keyframes draw-line {
    0% {
      stroke-dashoffset: 300;
      opacity: 0;
    }
    100% {
      stroke-dashoffset: 0;
      opacity: 1;
    }
  }

  @keyframes fade-to-dim {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0.3;
    }
  }
</style>
