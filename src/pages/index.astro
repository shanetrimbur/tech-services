---
<Layout metadata={metadata}>
  <!-- Logo with subtle glow -->
  <div class="flex justify-center items-center py-8">
    <h1 class="text-6xl md:text-8xl font-bold tracking-tighter">
      <span class="glow-t">T</span><span class="subtle-glow -ml-1">rimbur</span><span class="glow-t -ml-1">T</span><span class="subtle-glow -ml-1">ech</span>
    </h1>
  </div>

  <div class="network-container">
    <svg class="network" viewBox="-500 -250 1000 500">
      <defs>
        <filter id="glow">
          <feGaussianBlur stdDeviation="1.5" result="coloredBlur"/>
          <feMerge>
            <feMergeNode in="coloredBlur"/>
            <feMergeNode in="SourceGraphic"/>
          </feMerge>
        </filter>
      </defs>
      
      {(() => {
        const nodes = Array.from({ length: 35 }).map((_, i) => {
          const angle = (Math.PI * 2 * i) / 35;
          const radius = 200 + (Math.random() - 0.5) * 150;
          return {
            id: i,
            x: Math.cos(angle) * radius,
            y: Math.sin(angle) * radius,
            opacity: 0.3 + Math.random() * 0.7
          };
        });

        const edges = nodes.flatMap((node, i) => 
          nodes.slice(i + 1).filter(() => Math.random() < 0.15).map(target => ({
            source: node,
            target,
            opacity: 0.1 + Math.random() * 0.3
          }))
        );

        return (
          <>
            {edges.map(edge => (
              <line
                class="connection"
                x1={edge.source.x}
                y1={edge.source.y}
                x2={edge.target.x}
                y2={edge.target.y}
                style={`--opacity: ${edge.opacity}; --delay: ${Math.random() * 2}s;`}
              />
            ))}
            {nodes.map(node => (
              <circle 
                class="node"
                cx={node.x}
                cy={node.y}
                r="2.5"
                style={`--opacity: ${node.opacity}; --delay: ${Math.random() * 2}s;`}
              />
            ))}
          </>
        );
      })()}
    </svg>
  </div>

